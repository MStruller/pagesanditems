<?xml version="1.0" encoding="UTF-8"?>
<extension version="1.5" type="html" folder="cci_template" method="upgrade">
	<name>Div (Pages and Items Html)</name>
	<author>Carsten Engel</author>
	<creationDate>november 2011</creationDate>
	<copyright>Copyright (C) 2008-2011 Engelweb. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>-</authorEmail>
	<authorUrl>www.pages-and-items.com</authorUrl>
	<version>integrated</version>
	<description>Div for Template in view config_custom_itemtype(Html for the Pages-and-Items framework)</description>
	<files>
		<filename html="div">div.php</filename>
		<filename >index.html</filename>
	</files>
	<params>
		<param name="show_in" type="radio" default="0" label="COM_PAGESANDITEMS_SHOW_IN_TEMPLATE">
			<option value="0">intro/full</option>
			<option value="1">intro</option>
			<option value="2">full</option>
		</param>
	</params>

	<config>
		<fields name="params">
			<fieldset name="basic" >
				<field name="show_in" type="radio" default="0" label="COM_PAGESANDITEMS_SHOW_IN_TEMPLATE">
			<option value="0">intro/full</option>
			<option value="1">intro</option>
			<option value="2">full</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>