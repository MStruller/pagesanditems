<?xml version="1.0" encoding="UTF-8"?>
<extension version="1.5" type="fieldtype" method="upgrade">
	<name>Editor (Pages and Items fieldtype)</name>
	<author>Carsten Engel</author>
	<creationDate>november 2011</creationDate>
	<copyright>Copyright (C) 2008-2011 Engelweb. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>-</authorEmail>
	<authorUrl>www.pages-and-items.com</authorUrl>
	<version>integrated</version>
	<description>Editor (fieldtype for custom itemtypes in the Pages-and-Items framework)</description>
	<files>
		<filename fieldtype="editor">editor.php</filename>
		<filename >index.html</filename>
	</files>

	<params>
		<param name="show_field_name" type="radio" default="1" label="COM_PAGESANDITEMS_SHOW_FIELD_NAME" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>

		<param name="default_value" type="textarea" default="" rows="15" cols="50" label="COM_PAGESANDITEMS_DEFAULT_VALUE">
		</param>

		<param name="display_plugin_buttons" type="radio" default="1" label="COM_PAGESANDITEMS_DISPLAY_PLUGIN_BUTTONS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>

		<param name="height" type="text" default="500" size="100" label="COM_PAGESANDITEMS_HEIGHT">
		</param>
	</params>


	<config>
		<fields name="params">
			<fieldset name="basic" >
				<field name="showFieldName" type="radio" default="1" label="COM_PAGESANDITEMS_SHOW_FIELD_NAME" >
					<option value="-1">JNO</option>
					<option value="1">JYES</option>
				</field>
				<!--<field name="show_field_name" type="radio" default="1" label="COM_PAGESANDITEMS_SHOW_FIELD_NAME" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>-->

				<field name="default_value" type="textarea" default="" rows="15" cols="50" label="COM_PAGESANDITEMS_DEFAULT_VALUE">
				</field>

				<field name="display_plugin_buttons" type="radio" default="1" label="COM_PAGESANDITEMS_DISPLAY_PLUGIN_BUTTONS">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="height" type="text" default="500" size="100" label="COM_PAGESANDITEMS_HEIGHT">
				</field>
			</fieldset>
		</fields>
	</config>
</extension>