<?xml version="1.0" encoding="UTF-8"?>
<extension version="1.5" type="fieldtype" method="upgrade">
	<name>Textarea (Pages and Items fieldtype)</name>
	<author>Carsten Engel</author>
	<creationDate>December 2010</creationDate>
	<copyright>(Copyright (C) 2009 Engelweb. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>-</authorEmail>
	<authorUrl>www.pages-and-items.com</authorUrl>
	<version>integrated</version>
	<description>
		fieldtype Textarea (Pages and Items)
	</description>
	<files>
		<filename fieldtype="textarea">textarea.php</filename>
		<filename >index.html</filename>
		<filename>validation_textarea_not_empty.js</filename>
	</files>
	<params>
		<param name="no_lines_to_breaks" type="radio" default="0" label="COM_PAGESANDITEMS_NO_LINES_TO_BREAKS">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="limit_characters" type="text" default="0" label="COM_PAGESANDITEMS_LIMIT_CHARACTERS" description="COM_PAGESANDITEMS_LIMIT_CHARACTERS2">
		</param>
	</params>	

	<config>
		<fields name="params">
			<fieldset name="basic" >
				<field name="no_lines_to_breaks" type="radio" default="0" label="COM_PAGESANDITEMS_NO_LINES_TO_BREAKS">
			<option value="0">No</option>
			<option value="1">Yes</option>
				</field>
				<field name="limit_characters" type="text" default="0" label="COM_PAGESANDITEMS_LIMIT_CHARACTERS" description="COM_PAGESANDITEMS_LIMIT_CHARACTERS2">
				</field>
			</fieldset>	
		</fields>
	</config>
</extension>